{
  "compilerOptions": {
    "target": "ES2020", // Modern JS output
    "module": "CommonJS", // Node.js module system
    "rootDir": "src", // Source folder
    "outDir": "dist", // Compiled JS output folder
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "strict": true, // Enable all strict type checks
    "moduleResolution": "node", // Node.js-style module resolution
    "skipLibCheck": true, // Skip type checking for .d.ts files
    "forceConsistentCasingInFileNames": true // Enforce file name case-sensitivity
  },
  "include": ["src"], // Compile only files inside src/
  "exclude": ["node_modules", "dist"] // Donâ€™t compile these
}
